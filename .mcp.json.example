{
	"mcpServers": {
		"huly": {
			"command": "bunx",
			"args": ["@armoe/huly-mcp-server"],
			"env": {
				"HULY_WORKSPACE": "your-workspace",
				"HULY_TOKEN": "your-token-here"
			}
		}
	}
}

